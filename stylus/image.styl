.Image
	position: relative
	margin-bottom 3rem
	display none
	overflow: hidden
	&-podcast
		position absolute
		background-color alpha(blue-d, .7)
		height: 100%
		width 30%
		z-index: 20
	&-dev
		position absolute
		// background-color alpha(white, .7)
		right .5rem
		bottom 0
		// font-size: 2rem
		// font-size: 2rem
		color white
		font-weight: 300
		// font-family: 'Courgette', cursive
		// font-family: arial
		// text-transform: uppercase
		z-index: 20
		width 300px
		
	figure
		width: 100vw
		margin: 0
	img
		width: 100vw
		height: auto
		
	&-background
		position: absolute
		height: 100%
		width: 100vw
		top 0
		right: 0
		left 0
		background-color alpha(blue-d, .7)
		z-index: 20
		
@media (min-width: 700px)
	.Image
		display: block
		
@media (min-width: 950px)
	.Image
		h2
			font-size: 3rem

